@model MusicShop.Models.Music

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Music</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.ListArtist)
        </dt>
        <dd>
            <ul>
                @foreach (var artist in Model.ListArtist)
                {
                    <li>
                        @Html.ActionLink(artist.ArtistName , "Edit","Artists", new { id = artist.ArtistId }, null)
                    </li>
                }
            </ul>
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.ListAlbum)
        </dt>
        <dd>
            <ul>
                @foreach (var album in Model.ListAlbum)
                {
                    <li>
                        @Html.ActionLink(album.Title, "Edit", "Albums", new { id = album.AlbumId }, null)
                    </li>
                }
            </ul>
        </dd>


    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MusicId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
